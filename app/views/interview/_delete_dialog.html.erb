<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <div class="flex justify-between">
      <h1 class="mt-1 text-xl"><%= t(:are_you_sure) %></h1>
      <button
        type="button"
        data-action="dialog#close"
        class="rounded-lg
               bg-blue-500
               px-3.5 py-1
               mt-1"
        autofocus>
        <%= t(:close) %>
      </button>
    </div>
    <%= button_to t(:delete),
               interview_path(@interview),
               method: :delete,
               class: 'rounded-md
                       px-3.5 py-1
                       bg-red-600
                       hover:bg-red-500
                       text-white
                       inline-block
                       font-medium
                       cursor-pointer'
    %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    class="rounded-md
           px-3.5 py-1
           bg-red-600
           hover:bg-red-500
           text-white
           inline-block
           font-medium
           cursor-pointer">
    <%= t(:delete_interview) %>
  </button>
</div>
