<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <div class="flex justify-between">
      <h1 class="mt-1 text-xl"><%= t(:new_interview) %></h1>
      <button
        type="button"
        data-action="dialog#close"
        class="rounded-lg
               bg-red-500
               px-3.5 py-1
               mt-1"
        autofocus>
        <%= t(:close) %>
      </button>
    </div>
    <%= form_with model: @interview, url: interview_index_path do |form| %>
      <ul>
        <%= render partial: 'layouts/form_components/text_field',
              locals: {
                form: form,
                field: :location,
                field_name: t(:location),
                required: true
              }
        %>
        <%= render partial: 'layouts/form_components/datetime_field',
              locals: {
                form: form,
                field: :interview_start,
                field_name: t(:interview_start),
                required: true
              }
        %>
        <%= render partial: 'layouts/form_components/datetime_field',
              locals: {
                form: form,
                field: :interview_end,
                field_name: t(:interview_end),
                required: true
              }
        %>
        <%= form.hidden_field :job_application_id, value: @interview.job_application.id %>
      </ul>
      <%= form.button t(:add), class: 'mt-8
                                               rounded-md
                                               px-3.5 py-1
                                               bg-blue-600
                                               hover:bg-blue-500
                                               text-white
                                               inline-block
                                               font-medium
                                               cursor-pointer'
      %>
    <% end %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    class="rounded-md
           px-3.5 py-1
           bg-blue-600
           hover:bg-blue-500
           text-white
           inline-block
           font-medium
           cursor-pointer">
    <%= t(:add_interview) %>
  </button>
</div>
