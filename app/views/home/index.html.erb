<%= render 'layouts/flash' %>

<div class="flex flex-col md:flex-row justify-between">
  <%= render 'new_job_application_form' %>
  <div>
    <% if @next_step_count.positive? %>
      <%= link_to t(:next_steps),
        next_steps_path,
        class: "rounded-md
                px-3.5 py-1
                mt-4 md:mt-0
                mr-4
                bg-blue-600
                hover:bg-blue-500
                text-white
                inline-block
                font-medium
                cursor-pointer"
      %>
    <% end %>
    <%= link_to t(:companies),
      companies_path,
      class: "rounded-md
              px-3.5 py-1
              mt-4 md:mt-0
              bg-green-600
              hover:bg-green-500
              text-white
              inline-block
              font-medium
              cursor-pointer"
    %>
  </div>
</div>
<%= render partial: 'job_applications/applications_table',
            locals: {
              applications: @active_applications,
              caption: t(:active_applications)
            }
%>
<div class="mt-4">
  <%= link_to t(:all_applications),
    job_applications_path,
    class: "rounded-md
            px-3.5 py-1
            bg-blue-600
            hover:bg-blue-500
            text-white
            inline-block
            font-medium
            cursor-pointer"
  %>
</div>
