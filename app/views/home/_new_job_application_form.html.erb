<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <div class="flex justify-between">
      <h1 class="mt-1 text-xl">New job application</h1>
      <button
        type="button"
        data-action="dialog#close"
        class="rounded-lg
               bg-red-500
               px-3.5 py-1
               mt-1"
        autofocus>
        Close
      </button>
    </div>
    <%= form_with model: @new_application do |form| %>
      <h2 class="text-lg">Position:</h2>
      <div>
        <%= form.fields_for :position do |position_form| %>
          <ul class="mt-2">
            <li>
              <%= position_form.label :name, 'Job title' %>
              <%= position_form.text_field :name, class: 'shadow
                                                          appearance-none
                                                          border
                                                          border-blue-500
                                                          rounded
                                                          w-full
                                                          py-2
                                                          px-3
                                                          leading-tight
                                                          bg-inherit
                                                          focus:border-blue-700' %>
            </li>

            <li class="mt-2">
              <%= position_form.label :description, 'Job description' %>
              <%= position_form.text_field :description, class: 'shadow
                                                                 appearance-none
                                                                 border
                                                                 border-blue-500
                                                                 rounded
                                                                 w-full
                                                                 py-2
                                                                 px-3
                                                                 leading-tight
                                                                 bg-inherit
                                                                 focus:border-blue-700' %>
            </li>
          </ul>

          <h2 class="text-lg mt-4">Company:</h2>
          <div>
            <%= position_form.fields_for :company do |company_form| %>
              <ul class="mt-2">
                <li>
                  <%= company_form.label :name, 'Company name' %>
                  <%= company_form.text_field :name, class: 'shadow
                                                             appearance-none
                                                             border
                                                             border-blue-500
                                                             rounded
                                                             w-full
                                                             py-2
                                                             px-3
                                                             leading-tight
                                                             bg-inherit
                                                             focus:border-blue-700' %>
                </li>
              </ul>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= form.button 'Add application', class: 'mt-8
                                                 rounded-md
                                                 px-3.5 py-1
                                                 bg-blue-600
                                                 hover:bg-blue-500
                                                 text-white
                                                 inline-block
                                                 font-medium
                                                 cursor-pointer' %>
    <% end %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    class="rounded-md
           px-3.5 py-1
           bg-blue-600
           hover:bg-blue-500
           text-white
           inline-block
           font-medium
           cursor-pointer">
    New application
  </button>
</div>