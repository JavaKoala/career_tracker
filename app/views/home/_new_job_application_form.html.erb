<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <div class="flex justify-between">
      <h1 class="mt-1 text-lg">New job application</h1>
      <button
        type="button"
        data-action="dialog#close"
        class="rounded-full
              border-2
              border-red-500
              px-1
              mt-1"
        autofocus>
        Close
      </button>
    </div>
    <%= form_with model: @new_application do |form| %>
      Position:
      <div>
        <%= form.fields_for :position do |position_form| %>
          <%= position_form.label :name, 'Job title' %>
          <%= position_form.text_field :name, class: 'shadow
                                                      appearance-none
                                                      border
                                                      rounded
                                                      w-full
                                                      py-2
                                                      px-3
                                                      leading-tight
                                                      bg-inherit
                                                      focus:outline-none
                                                      focus:border-sky-500' %>

          <%= position_form.label :description, 'Job description' %>
          <%= position_form.text_field :description, class: 'shadow
                                                             appearance-none
                                                             border
                                                             rounded
                                                             w-full
                                                             py-2
                                                             px-3
                                                             leading-tight
                                                             bg-inherit
                                                             focus:outline-none
                                                             focus:border-sky-500' %>

          Company:
          <div>
            <%= position_form.fields_for :company do |company_form| %>
              <%= company_form.label :name, 'Company name' %>
              <%= company_form.text_field :name, class: 'shadow
                                                         appearance-none
                                                         border
                                                         rounded
                                                         w-full
                                                         py-2
                                                         px-3
                                                         leading-tight
                                                         bg-inherit
                                                         focus:outline-none
                                                         focus:border-sky-500' %>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= form.button 'Add application', class: 'rounded-md
                                                 px-3.5 py-1
                                                 bg-blue-600
                                                 hover:bg-blue-500
                                                 text-white
                                                 inline-block
                                                 font-medium
                                                 cursor-pointer' %>
    <% end %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    class="rounded-md
           px-3.5 py-1
           bg-blue-600
           hover:bg-blue-500
           text-white
           inline-block
           font-medium
           cursor-pointer">
    New application
  </button>
</div>