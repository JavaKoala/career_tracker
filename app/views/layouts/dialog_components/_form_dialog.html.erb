<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           self-center
           justify-self-center
           p-4
           m-auto
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <%= render partial: 'layouts/dialog_components/header', locals: { title: title } %>
    <%= form_with model: model, url: path do |form| %>
      <%= render partial: form_partial, locals: { form: form } %>
      <%= render partial: 'layouts/form_components/form_button', locals: { form: form, button_text: action_button_text } %>
    <% end %>
  </dialog>

  <%= render partial: 'layouts/dialog_components/open_button', locals: { button_text: open_button_text } %>
</div>
