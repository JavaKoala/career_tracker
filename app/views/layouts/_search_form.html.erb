<div class="dark:text-white">
  <%= form_with url: path, method: :get do |form| %>
    <%= form.label :search, "#{label}: " %>
    <%= form.search_field :search,
                          class: 'shadow
                                  appearance-none
                                  border
                                  border-blue-500
                                  rounded
                                  w-1/8
                                  py-2 px-3
                                  mx-1
                                  leading-tight
                                  bg-inherit
                                  focus:border-blue-700'
    %>
    <%= form.submit t(:search), class: 'rounded-md
                                        px-3.5 py-1
                                        mx-1
                                        bg-green-600
                                        hover:bg-green-500
                                        text-white
                                        inline-block
                                        font-medium
                                        cursor-pointer'
    %>
  <% end %>
</div>
