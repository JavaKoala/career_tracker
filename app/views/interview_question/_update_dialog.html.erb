<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <%= render partial: 'layouts/dialog_components/header', locals: { title: t(:update_interview_question) } %>
    <%= form_with model: question do |form| %>
      <%= render partial: '/interview_question/interview_question_form', locals: { form: form } %>
      <%= form.button t(:update_question), class: 'mt-8
                                       rounded-md
                                       px-3.5 py-1
                                       bg-blue-600
                                       hover:bg-blue-500
                                       text-white
                                       inline-block
                                       font-medium
                                       cursor-pointer'
      %>
    <% end %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    id="interview-question-<%= question.id %>-edit">
    <%= image_tag("pencil-square.svg", alt: t(:update)) %>
  </button>
</div>
