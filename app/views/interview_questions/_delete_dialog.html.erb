<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           self-center
           justify-self-center
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <%= render partial: 'layouts/dialog_components/header', locals: { title: t(:are_you_sure) } %>
    <%= render partial: 'layouts/form_components/delete_button',
               locals: { delete_path: interview_question_path(question), button_text: t(:delete_question) }
    %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    id="interview-question-<%= question.id %>-delete">
    <%= image_tag("bi-trash3.svg", alt: t(:delete)) %>
  </button>
</div>
