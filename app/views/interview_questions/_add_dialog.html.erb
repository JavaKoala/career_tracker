<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           p-4
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <%= render partial: 'layouts/dialog_components/header', locals: { title: t(:new_interview_question) } %>
    <%= form_with model: @interview_question, url: interview_questions_path do |form| %>
      <%= render partial: '/interview_questions/interview_question_form', locals: { form: form } %>
      <%= render partial: 'layouts/form_components/form_button', locals: { form: form, button_text: t(:add) } %>
    <% end %>
  </dialog>

  <%= render partial: 'layouts/dialog_components/open_button', locals: { button_text: t(:add_question) } %>
</div>
