<div data-controller="dialog">
  <dialog
    data-dialog-target="dialog"
    class="w-full
           md:w-1/2
           self-center
           justify-self-center
           p-4
           m-auto
           rounded-lg
           shadow-xl
           border-2
           dark:bg-black
           dark:text-white
           border-blue-500">
    <%= render partial: 'layouts/dialog_components/header', locals: { title: t(:are_you_sure) } %>
    <% if current_page?(next_steps_path) %>
      <%= button_to t(:delete_next_step),
                    next_step_path(next_step, format: :html),
                    method: :delete,
                    data: { turbo_frame: '_top' },
                    class: 'rounded-md
                            px-3.5 py-1
                            bg-red-600
                            hover:bg-red-500
                            text-white
                            inline-block
                            font-medium
                            cursor-pointer'
      %>
    <% else %>
      <%= render partial: 'layouts/form_components/delete_button',
                locals: { delete_path: next_step_path(next_step, format: :turbo_stream), button_text: t(:delete_next_step) }
      %>
    <% end %>
  </dialog>

  <button
    type="button"
    data-action="dialog#open"
    id="next-step-<%= next_step.id %>-delete">
    <%= image_tag("bi-trash3.svg", alt: t(:delete)) %>
  </button>
</div>
