<table class="mt-4
              border
              border-gray-300
              dark:border-gray-700
              dark:text-white
              w-full xl:w-2/3">
  <caption class="text-lg">
    <%= t(:interviewers) %>
  </caption>
  <thead>
    <tr class="border-b-4 border-gray-300 dark:border-gray-700">
      <th></th>
      <th class="p-2 border border-gray-300 dark:border-gray-700"><%= t(:name) %></th>
      <th class="p-2 border border-gray-300 dark:border-gray-700"><%= t(:email) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% interviewers.each do |interviewer| %>
      <tr>
        <td class="p-3 border border-gray-300 dark:border-gray-700 dark:invert">
          <%= render partial: 'person/update_dialog', locals: { person: interviewer.person } %>
        </td>
        <td class="p-3 border border-gray-300 dark:border-gray-700"><%= interviewer.name %></td>
        <td class="p-3 border border-gray-300 dark:border-gray-700"><%= interviewer.email_address %></td>
        <td class="p-3 border border-gray-300 dark:border-gray-700 dark:invert">
          <%= render partial: 'interviewers/delete_dialog', locals: { interviewer: interviewer } %>
        </td>
    <% end %>
  </tbody>
</table>
