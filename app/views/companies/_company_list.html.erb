<table class="mt-4
              border
              border-gray-300
              dark:border-gray-700
              dark:text-white
              w-full xl:w-2/3">
  <thead>
    <tr class="border-b-4 border-gray-300 dark:border-gray-700">
      <th class="p-2 border border-gray-300 dark:border-gray-700">
        <%= link_to t(:company), companies_path(name: params[:name], direction: change_direction) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td class="p-3 border border-gray-300 dark:border-gray-700"><%= link_to company.name, company_path(company) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
