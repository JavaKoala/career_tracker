<%= render 'layouts/flash' %>
<div class="md:flex md:justify-between">
  <%= render partial: 'layouts/dialog_components/form_dialog',
             locals: {
               title: t(:new_company),
               model: @new_company,
               path: companies_path,
               form_partial: 'companies/company_form',
               action_button_text: t(:add_company),
               open_button_text: t(:new_company)
             }
  %>
  <div class="mt-2 md:mt-0 w-full md:w-1/2">
    <%= render partial: 'layouts/search_form',
               locals: {
                 path: companies_path,
                 label: t(:find_company),
                 width: 'w-1/2'
               }
    %>
  </div>
</div>
<%= render 'companies/company_list' %>
